#: import asset chordwise.utils.asset
#: import ChordList chordwise.uix.chordlist.ChordList

<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 1)
        padding: '48dp'
        spacing: '48dp'

        Image:
            id: logo
            source: asset('img/chordwise.png')

        Button:
            text: 'Chord list'
            on_release: app.route = '/chords'

        Button:
            text: 'Practice!'
            on_release: app.route = '/chords/practice'


<ChordListScreen>:
    BoxLayout:
        orientation: 'vertical'
        BackButton
        ChordList
            section: 'major'
        ChordList
            section: 'minor'
        ChordList
            section: '5'


<ChordPracticeScreen>:
    BoxLayout:
        orientation: 'vertical'
        BackButton
        Label:
            text: 'Chord practice'


<ScalesScreen>:
    BoxLayout:
        orientation: 'vertical'
        BackButton
        Label:
            text: 'Scales.'

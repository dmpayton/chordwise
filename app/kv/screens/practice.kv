#: import Chord chordwise.uix.chord.ChordImage
#: import asset chordwise.utils.asset

<PracticeScreen>:
    BoxLayout:
        orientation: 'vertical'
        Header
        BoxLayout:
            orientation: 'vertical'
            padding: '20dp'

            ChordImage:
                id: 'current'
                width: self.parent.width
                chord: 'A'
            Label:
                color: (.2, .2, .2, 1)
                halign: 'right'
                height: '60dp'
                size_hint_y: None
                text: '4/4 @ 60 bpm'
                text_size: self.size

        BoxLayout:
            id: 'playlist'
            orientation: 'horizontal'
            size_hint_y: .2
            padding: '20dp'

            # Background
            canvas.before:
                Color:
                    rgb: (.95, .95, .95, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Bottom border
            canvas.after:
                Color:
                    rgb: (.8, .8, .8, 1)
                Rectangle:
                    pos: self.x, (self.y + self.height)
                    size: self.width, 1

            ChordItem:
                id: 'previous-2'
                chord: 'A'
                opacity: .4

            ChordItem:
                id: 'previous-1'
                chord: 'Dm'
                opacity: .4

            ChordItem:
                id: 'current'
                chord: 'A'

            ChordItem:
                id: 'future-1'
                chord: 'E'
                opacity: .4

            ChordItem:
                id: 'future-2'
                chord: 'D'
                opacity: .4

<ChordItem@ChordImage>:
    color: (.95, .95, .95, 1)

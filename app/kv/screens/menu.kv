#: import MenuButton chordwise.uix.menu.MenuButton
#: import asset chordwise.utils.asset


<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '48dp'
        spacing: '48dp'

        Image:
            id: logo
            source: asset('img/chordwise.png')
            size_hint_y: 2

        MenuButton:
            icon: asset('img/nav/chord.png')
            text: 'Chord list'
            on_release: app.route = '/chords'

        MenuButton:
            icon: asset('img/nav/metronome.png')
            text: 'Practice'
            on_release: app.route = '/practice'

        #MenuButton:
        #    icon: asset('img/nav/settings.png')
        #    text: 'Settings'
        #    on_release: app.route = '/settings'


<MenuButton>:
    halign: 'left'

    StackLayout:
        orientation: 'lr-tb'
        pos: self.parent.pos
        size: self.parent.size
        padding: '48dp'
        spacing: '48dp'

        Image:
            id: icon
            color: root.background_color
            size_hint_x: None

        Label:
            id: text
            color: (1, 1, 1, 1)
            size_hint_x: None
            text_size: self.size

<ChordList>:
    do_scroll_x: False

    canvas.before:
        Color:
            rgb: (0, .5, 0, .3)
        Rectangle:
            size: self.size
            pos: self.pos

<ChordSection>:
    cols: 1
    padding: '20dp', '0dp'
    size_hint_y: None

    Label:
        id: label
        size_hint_y: None
        height: '70dp'

        canvas.before:
            Color:
                rgb: (1, 0, 0, .3)
            Rectangle:
                size: self.size
                pos: self.pos

    GridLayout:
        id: chords
        cols: 4
        size_hint_y: None
        padding: '20dp'
        spacing: '20dp'

        canvas.before:
            Color:
                rgb: (0, 0, 1, .3)
            Rectangle:
                size: self.size
                pos: self.pos

<ChordThumb>:
    size_hint_y: None
    height: '200dp'
    color: (1, 1, 1, .8)
